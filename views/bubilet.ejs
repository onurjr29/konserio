<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Etkinlikler</title>
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-5">Etkinlikler</h1>
        <div class="row">
            <% etkinlikler.forEach(etkinlik => { %>
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <% if (etkinlik.attachment_image && etkinlik.attachment_image.length > 0) { %>
                            <img src="<%= etkinlik.attachment_image[0] %>" class="card-img-top" alt="<%= etkinlik.eventname %>">
                        <% } %>
                        <div class="card-body">
                            <h5 class="card-title"><%= etkinlik.eventname %></h5>
                            <p class="card-text"><strong>Yer:</strong> <%= etkinlik.venue %></p>
                            <p class="card-text"><strong>Tarih:</strong> <%= new Date(etkinlik.start).toLocaleDateString("tr-TR") %></p>
                            <p class="card-text"><%- etkinlik.description ? etkinlik.description : '' %></p>
                        </div>
                        <div class="card-footer">
                            <h6>Bilmeniz Gerekenler:</h6>
                            <div><%- etkinlik.additional_information ? etkinlik.additional_information : 'Bilgi yok' %></div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
